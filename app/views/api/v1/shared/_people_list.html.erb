<tr>
  <td>
    <div class="attending_pic">
       <%= link_to image_tag(person.get_image), api_v1_person_path(person,
                                                                   :auth_token=>current_user.authentication_token) %>
    </div>
    <div class="attending_row">
      <strong><%= link_to person.first_name + " " +  person.last_name, api_v1_person_path(person,
      :auth_token=>current_user.authentication_token)%></strong><br />
      <br />
      <%= link_to person.role, api_v1_person_path(person,
                                                  :auth_token=>current_user.authentication_token) %><br />
      <%= link_to person.company, api_v1_person_path(person,
                                                     :auth_token=>current_user.authentication_token) %>
    </div>
    <% unless current_user.id.eql?(person.id) %>
        <% if current_user.is_following person.id %>
            <% relationship = current_user.followed_people.where(:followed_person_id=>person.id).first %>
            <%= button_to "Un-Follow", {:controller => :followed_people,
                                     :action => 'destroy', :id => relationship.id,
                                     :auth_token=>current_user.authentication_token
                                      },
                                     :method => :delete %>
        <% else %>
            <%=  button_to "Follow", api_v1_followed_people_path(:person_id => person,
            :auth_token=>current_user.authentication_token), :method => :post %>
        <% end %>
        </td>
    <% end %>
   </td>
 </tr>

