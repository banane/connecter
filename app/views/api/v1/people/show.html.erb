<div id="profile_detail">
    <div id="profile_subhead">
        <%= link_to(api_v1_people_path(:auth_token => @current_user.authentication_token)) do %>
           <div id="profile_detail_left"><div id="arrow"><</div></div>
        <% end %>
        <div id="profile_detail_right"><%= @person.first_name%> <%= @person.last_name%></div>
    </div>
    <% if @person.profile_photo.present? %>
       <div id="person_detail_imagebox">
            <%= image_tag @person.profile_photo %>
            <%= render :partial => "api/v1/shared/follow_logic", :locals => { :person => @person, :current_user => @current_user } %>
       </div>

    <% else %>
        <div id="person_detail_follow">
        <%= render :partial => "api/v1/shared/follow_logic", :locals => { :person => @person, :current_user => @current_user } %>
        </div>
    <% end %>
    <div id="person_info">
      <p>
        <b>First name:</b> <%= @person.first_name %>
      </p>
        <p>
          <b>Last name:</b> <%= @person.last_name %>
        </p>

        <p>
          <b>Role:</b> <%= @person.role %>
        </p>

        <p>
          <b>Company:</b> <%= @person.company %>
        </p>

      <p>
        <b>Location:</b> <%= @person.location %>
      </p>

      <p>
        <b>Looking For:</b>
        <%= @person.looking_for %>
      </p>

      <p>
        <b>Personal Keywords:</b>
        <%= @person.keywords %>
        </p>
      <div id="center_button">
          <% if @person.contact_permission? %>
              <%= mail_to @person.email, "Contact", :id=>"mail_to_link" %>
            <% end %>
        </div>

    </div>

</div>