<div id="profile_detail_view">
   <% unless @person.is_me?(@current_user) %>
        <% if @from_view.present?  # from search result path  %>
            <% if @from_view.eql?("search") %>
              <%=  button_to "X", "/api/v1/search?auth_token=#{@current_user.authentication_token}&query=#{@query}",
              :method => :post, :class=>"close_link" %>
            <% end %>
        <% else %>
            <%= link_to(api_v1_people_path(:auth_token => @current_user.authentication_token), :id => "profile_detail_left") do %>X<% end %>
        <% end %>
     <% end %>
        <% if @person.profile_photo.present? %>
           <div id="person_detail_imagebox">
                <%= image_tag @person.profile_photo %>
             <% unless @person.is_me?(@current_user) %>

                   <%= render :partial => "api/v1/shared/follow_logic", :locals => { :person => @person, :current_user => @current_user } %>
               <% end %>
           </div>

        <% else %>
          <% unless @person.is_me?(@current_user) %>

                <div id="person_detail_follow">
                    <%= render :partial => "api/v1/shared/follow_logic", :locals => { :person => @person, :current_user => @current_user } %>
                </div>
          <% end %>
        <% end %>
        <div id="person_info">
          <% if @person.first_name.present? and @person.last_name.present? %>
            <p>
                <b>Name:</b> <%= @person.first_name %> <%= @person.last_name %>
            </p>
          <% end %>

            <% if @person.role.present? %>
                <p>
                  <b>Role:</b> <%= @person.role %>
                </p>
            <% end %>
          <% if @person.company.present? %>
            <p>
              <b>Company:</b> <%= @person.company %>
            </p>
          <% end %>
          <% if @person.location.present? %>
              <p>
                <b>Location:</b> <%= @person.location %>
              </p>
          <% end %>
          <% if @person.looking_for.present? %>
              <p>
                <b>I want to meet:</b>
                <%= @person.looking_for %>
              </p>
          <% end %>

          <% if @person.keywords.present? %>
              <p>
                <b>Personal keywords</b>
                <%= @person.keywords %>
                </p>
          <% end %>


        </div>
      <div class="center_button">
        <% if @person.ok_to_contact? && !@person.is_me?(@current_user) %>
            <%= mail_to @person.email, "Contact", :id=>"mail_to_link" %>
        <% end %>
      </div>
    </div>
</div>